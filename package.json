{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@9.8.1",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --build --verbose",
    "build": "npx turbo run build",
    "test": "npx turbo run test --filter=backend",
    "e2e": "npx turbo run cypress"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.0",
    "cors": "^2.8.5",
    "react-native": "^0.82.1",
    "react-select": "^5.10.2",
    "recharts": "^3.4.1"
  }
}
