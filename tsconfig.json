{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "apps/backend/src/**/*",
    "packages/**/src/**/*"
  ],
  "exclude": ["node_modules", "dist", "apps/frontend"]
}